---
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";

const pricing = [
  {
    name: "Personal",
    price: "Free",
    popular: false,
    features: [
      "Lifetime free",
      "Up to 3 users",
      "Unlimited Pages",
      "Astro Sub domain",
      "Basic Integrations",
      "Community Support",
    ],
    button: {
      text: "Get Started",
      link: "/",
    },
  },
  {
    name: "Startup",
    price: {
      monthly: "$19",
      annual: "$16",
      discount: "10%",
      original: "$24",
    },
    popular: true,
    features: [
      "All Free Features",
      "Up to 20 users",
      "20 Custom domains",
      "Unlimited Collaborators",
      "Advanced Integrations",
      "Priority Support",
    ],
    button: {
      text: "Get Started",
      link: "#",
    },
  },
  {
    name: "Enterprise",
    price: "Custom",
    popular: false,
    features: [
      "All Pro Features",
      "Unlimited Custom domains",
      "99.99% Uptime SLA",
      "SAML & SSO Integration",
      "Dedicated Account Manager",
      "24/7 Phone Support",
    ],
    button: {
      text: "Contact us",
      link: "/contact",
    },
  },
];
---

<Layout title="Pricing">
  <Container>
    <Sectionhead>
      <Fragment slot="title">Pricing</Fragment>
      <Fragment slot="desc">
        Simple & Predictable pricing. No Surprises.
      </Fragment>
    </Sectionhead>

    <div class="grid md:grid-cols-3 gap-10 mx-auto max-w-screen-lg mt-12 animate-fade-in">
      {pricing.map((item) => (
        <div class={`
          flex flex-col p-6 mx-auto max-w-lg text-center rounded-xl shadow-xl transition-all duration-300 
          ${item.popular 
            ? 'bg-gradient-to-br from-blue-600 to-purple-600 text-white scale-105 hover:scale-110' 
            : 'bg-white border border-gray-100 text-gray-900 hover:shadow-2xl'}
        `}>
          <div class="mb-4">
            <h3 class={`text-2xl font-bold ${item.popular ? 'text-white' : 'text-gray-900'}`}>
              {item.name}
            </h3>
            <div class="mt-4 mb-6">
              {typeof item.price === 'object' ? (
                <div class="flex flex-col items-center">
                  <div class="text-3xl font-extrabold">
                    {item.price.monthly}
                    <span class="text-sm ml-1 font-normal">/ month</span>
                  </div>
                  <div class="text-sm text-gray-400 mt-2">
                    {item.price.annual} yearly ({item.price.discount} off)
                  </div>
                </div>
              ) : (
                <div class="text-3xl font-extrabold">{item.price}</div>
              )}
            </div>
          </div>
          
          <ul class="mb-8 space-y-4 text-left">
            {item.features.map((feature) => (
              <li class="flex items-center space-x-3">
                <svg class="flex-shrink-0 w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                <span>{feature}</span>
              </li>
            ))}
          </ul>
          
          <a 
            href={item.button.link} 
            class={`
              inline-flex justify-center w-full px-5 py-3 rounded-full transition-all duration-300 
              ${item.popular 
                ? 'bg-white text-blue-600 hover:bg-blue-50' 
                : 'bg-blue-600 text-white hover:bg-blue-700'}
            `}
          >
            {item.button.text}
          </a>
        </div>
      ))}
    </div>
  </Container>
</Layout>
